<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!-- Eclipse代码格式化配置文件 -->
<profiles version="13">
    <!-- 自定义的代码格式化配置文件 -->
    <profile kind="CodeFormatterProfile" name="Custom" version="13">
        <!-- 基础缩进和空格设置 -->
        <!-- 设置缩进字符为空格 -->
        <setting id="org.eclipse.jdt.core.formatter.tabulation.char" value="space"/>
        <!-- 设置Tab键等于多少个空格 -->
        <setting id="org.eclipse.jdt.core.formatter.tabulation.size" value="4"/>
        <!-- 设置缩进大小为4个空格 -->
        <setting id="org.eclipse.jdt.core.formatter.indentation.size" value="4"/>
        <!-- 设置续行缩进级别 -->
        <setting id="org.eclipse.jdt.core.formatter.continuation_indentation" value="1"/>
        <!-- 设置数组初始化的续行缩进级别 -->
        <setting id="org.eclipse.jdt.core.formatter.continuation_indentation_for_array_initializer" value="1"/>

        <!-- switch语句中冒号前不添加空格 -->
        <setting id="org.eclipse.jdt.core.formatter.insert_space_before_colon_in_case" value="do not insert"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_space_before_colon_in_default" value="do not insert"/>


        <!-- 行宽设置 -->
        <!-- 设置每行最大字符数 -->
        <setting id="org.eclipse.jdt.core.formatter.lineSplit" value="160"/>
        <!-- 设置注释每行最大字符数 -->
        <setting id="org.eclipse.jdt.core.formatter.comment.line_length" value="160"/>

        <!-- 设置方法链的对齐方式 -->
        <setting id="org.eclipse.jdt.core.formatter.alignment_for_method_chain" value="48"/>
        <!-- 设置方法调用中选择器的对齐方式 -->
        <setting id="org.eclipse.jdt.core.formatter.alignment_for_selector_in_method_invocation" value="48"/>
        <!-- 设置方法调用中参数的对齐方式 -->
        <setting id="org.eclipse.jdt.core.formatter.alignment_for_arguments_in_method_invocation" value="48"/>
        <!-- 设置数组初始化表达式的对齐方式 -->
        <setting id="org.eclipse.jdt.core.formatter.alignment_for_expressions_in_array_initializer" value="48"/>
        <!-- 在方法调用链之前换行 -->
        <setting id="org.eclipse.jdt.core.formatter.wrap_before_method_call_chain" value="false"/>
        <!-- 不合并被包装的行 -->
        <setting id="org.eclipse.jdt.core.formatter.join_wrapped_lines" value="false"/>
        <!-- 在链式方法调用前插入新行 -->
        <setting id="org.eclipse.jdt.core.formatter.insert_new_line_before_chain_method_invocation" value="true"/>


        <!-- 换行和空行设置 -->
        <!-- 导入语句后的空行数 -->
        <setting id="org.eclipse.jdt.core.formatter.blank_lines_after_imports" value="1"/>
        <!-- 字段前的空行数 -->
        <setting id="org.eclipse.jdt.core.formatter.blank_lines_before_field" value="0"/>
        <!-- 方法前的空行数 -->
        <setting id="org.eclipse.jdt.core.formatter.blank_lines_before_method" value="1"/>
        <!-- 新代码块前的空行数 -->
        <setting id="org.eclipse.jdt.core.formatter.blank_lines_before_new_chunk" value="1"/>
        <!-- 类型声明之间的空行数 -->
        <setting id="org.eclipse.jdt.core.formatter.blank_lines_between_type_declarations" value="1"/>
        <!-- 如果文件末尾缺少换行符，则插入 -->
        <setting id="org.eclipse.jdt.core.formatter.insert_new_line_at_end_of_file_if_missing" value="insert"/>

        <!-- 大括号位置设置 -->
        <!-- 匿名类声明的大括号位置 -->
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_anonymous_type_declaration" value="end_of_line"/>
        <!-- 方法声明的大括号位置 -->
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_method_declaration" value="end_of_line"/>
        <!-- 代码块的大括号位置 -->
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_block" value="end_of_line"/>
        <!-- 构造函数声明的大括号位置 -->
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_constructor_declaration" value="end_of_line"/>
        <!-- 类型声明的大括号位置 -->
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_type_declaration" value="end_of_line"/>

        <!-- 空格设置 -->
        <!-- 方法调用参数中逗号后的空格 -->
        <setting id="org.eclipse.jdt.core.formatter.insert_space_after_comma_in_method_invocation_arguments" value="insert"/>
        <!-- 方法调用参数中逗号前的空格 -->
        <setting id="org.eclipse.jdt.core.formatter.insert_space_before_comma_in_method_invocation_arguments" value="do not insert"/>
        <!-- 分号前的空格 -->
        <setting id="org.eclipse.jdt.core.formatter.insert_space_before_semicolon" value="do not insert"/>
        <!-- 分号后的空格 -->
        <setting id="org.eclipse.jdt.core.formatter.insert_space_after_semicolon" value="insert"/>
        <!-- 类型转换后的空格 -->
        <setting id="org.eclipse.jdt.core.formatter.insert_space_after_closing_paren_in_cast" value="insert"/>

        <!-- 注释格式化设置 -->
        <!-- 是否格式化单行注释 -->
        <setting id="org.eclipse.jdt.core.formatter.comment.format_line_comments" value="true"/>
        <!-- 是否格式化块注释 -->
        <setting id="org.eclipse.jdt.core.formatter.comment.format_block_comments" value="true"/>
        <!-- 是否格式化Javadoc注释 -->
        <setting id="org.eclipse.jdt.core.formatter.comment.format_javadoc_comments" value="true"/>
        <!-- 是否保持注释的连续行 -->
        <setting id="org.eclipse.jdt.core.formatter.preserve_comment_joined_lines" value="false"/>
        <!-- 参数描述的缩进 -->
        <setting id="org.eclipse.jdt.core.formatter.comment.indent_parameter_description" value="true"/>
        <!-- 根标签的缩进 -->
        <setting id="org.eclipse.jdt.core.formatter.comment.indent_root_tags" value="true"/>
        <!-- 注释行长度限制 -->
        <setting id="org.eclipse.jdt.core.formatter.comment.line_length" value="160"/>
        <!-- 在块边界添加新行 -->
        <setting id="org.eclipse.jdt.core.formatter.comment.new_lines_at_block_boundaries" value="true"/>
        <!-- 在Javadoc边界添加新行 -->
        <setting id="org.eclipse.jdt.core.formatter.comment.new_lines_at_javadoc_boundaries" value="true"/>
        <!-- 是否清除块注释中的空行 -->
        <setting id="org.eclipse.jdt.core.formatter.comment.clear_blank_lines_in_block_comment" value="false"/>
        <!-- 是否清除Javadoc注释中的空行 -->
        <setting id="org.eclipse.jdt.core.formatter.comment.clear_blank_lines_in_javadoc_comment" value="false"/>
    </profile>
</profiles>
